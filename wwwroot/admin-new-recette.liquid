<script type="module">
    import '/assets/script.mjs';
    import {getRecipe} from '/assets/script.mjs';

    window.cleanTmpRecipe = async function cleanTmpRecipe() {
        localStorage.removeItem('tmpRecipe');
        location.reload();
    }

    window.saveLocally=function saveLocally(recipe)
    {
        localStorage.setItem('tmpRecipe', JSON.stringify(recipe));
    }
    try{
        window.loadRecipe(JSON.parse(localStorage.getItem('tmpRecipe')))
        document.querySelector('.fa-trash').style.display = 'none'
    }
    catch(e)
    {
        console.error(e);
    }

</script>
